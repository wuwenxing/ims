<% if(typeof(id) != "undefined"){ %>
<form class="layui-form" action="">
  <div class="layui-form-item">
      <div class="layui-inline">
        <label class="layui-form-label">编号</label>
        <div class="layui-input-inline">
          <input name="code" value="<%=code%>" lay-verify="required" autocomplete="off" class="layui-input">
        </div>
      </div>
      <div class="layui-inline">
        <label class="layui-form-label">状态</label>
        <div class="layui-input-inline">
          <select name="enableFlag" id="" lay-verify="required">
            <option value="Y" <%if(enableFlag == 'Y'){%> selected <%}%> >启用</option>
            <option value="N" <%if(enableFlag == 'N'){%> selected <%}%>>关闭</option>
          </select>
        </div>
      </div>
  </div>
  <div class="layui-form-item">
      <div class="layui-inline">
        <label class="layui-form-label">语言</label>
        <div class="layui-input-inline">
            <div class="layui-input-inline">
              <select name="lang" id="" lay-verify="required">
                <option value="">---请选择---</option>
                <option value="zh_TW" <%if(lang == 'zh_TW'){%> selected <%}%> >繁体</option>
                <option value="zh_CN" <%if(lang == 'zh_CN'){%> selected <%}%>>简体</option>
                <option value="en_US" <%if(lang == 'en_US'){%> selected <%}%>>英文</option>
              </select>
            </div>
        </div>
      </div>
      <div class="layui-inline">
        <label class="layui-form-label">名称</label>
        <div class="layui-input-inline">
            <input value="<%=tplName%>" name="tplName" lay-verify="required" autocomplete="off" class="layui-input">
        </div>
      </div>
  </div>
  <div class="layui-form-item">
    <div class="layui-inline">
      <label for="" class="layui-form-label">内容</label>
      <div class="layui-input-inline">
        <textarea name="tplContent" id="" cols="30" rows="10"><%=tplContent%></textarea>
      </div>
    </div>
  </div>
  <div class="layui-form-item">
    <div class="layui-inline">
      <label for="" class="layui-form-label">扩展信息1</label>
      <div class="layui-input-inline">
        <textarea name="tplContent" id="" cols="30" rows="10"><%=ext1%></textarea>
      </div>
    </div>
  </div>
  <div class="layui-form-item">
    <div class="layui-inline">
      <label for="" class="layui-form-label">备注</label>
      <div class="layui-input-inline">
        <textarea name="tplContent" id="" cols="30" rows="10"><%=remark%></textarea>
      </div>
    </div>
  </div>
  <button class="layui-btn node-submit" style="display:none;" lay-submit lay-filter="item"></button>
</form>
<% }else{ %>
