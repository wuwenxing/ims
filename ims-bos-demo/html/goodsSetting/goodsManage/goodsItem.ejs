<form action="" class="layui-form">
    <table>
        <tr>
            <td>
                <div class="layui-inline">
                    <label for="" class="layui-form-label">活动名称<span class="mustInput"></span></label>
                </div>
            </td>
            <td colspan="3">
                <div class="layui-inline">
                    <select name="activityPeriods" id="activityPeriods">
                        <option value="">--请选择--</option>
                        <%actData.forEach(function(item, index){%>
                            <option value="item.id"><%=item.name%></option>
                        <%})%>
                    </select>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="layui-inline">
                    <label for="" class="layui-form-label">任务名称<span class="mustInput"></span></label>
                </div>
            </td>
            <td colspan="3">
                <div class="layui-inline">
                    <select name="" id="">
                        <option value="">--请选择--</option>
                    </select>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="layui-inline">
                    <label for="" class="layui-form-label">物品名称<span class="mustInput"></span></label>
                </div>
            </td>
            <td colspan="3">
                <div class="layui-inline">
                    <select name="" id="">
                        <option value="">--请选择--</option>
                    </select>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="layui-inline">
                    <label for="" class="layui-form-label">商品显示名称<span class="mustInput"></span></label>
                </div>
            </td>
            <td colspan="3">
                <div class="layui-inline">
                    <input type="text" class="layui-input" placeholder="输入商品显示名称">
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="layui-inline">
                    <label for="" class="layui-form-label">物品数量<span class="mustInput"></span></label>
                </div>
            </td>
            <td>
                <div class="layui-inline">
                    <input type="text" class="layui-input" placeholder="自动带入物品数量">
                </div>
            </td>
            <td>
                <label for="" class="layui-form-label">物品状态</label>
            </td>
            <td>
                <div class="layui-inline">
                    <select name="" id="">
                        <option value=""></option>
                    </select>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="layui-inline">
                    <label for="" class="layui-form-label">物品有效期<span class="mustInput"></span></label>
                </div>
            </td>
            <td colspan="3">
                <div class="layui-inline">
                    <input type="text" class="layui-input" placeholder="yyyy:mm:dd hh:mm:ss" id="startTime">
                </div>
                <div class="layui-inline">-</div>
                <div class="layui-inline">
                    <input type="text" class="layui-input" placeholder="yyyy:mm:dd hh:mm:ss" id="endTime">
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="layui-inline">
                    <label for="" class="layui-form-label">商品图片<span class="mustInput"></span></label>
                </div>
            </td>
            <td>
                <div class="layui-inline up-btn">
                    <button type="button" class="layui-btn" id="upload">
                        <i class="layui-icon">&#xe67c;</i>上传图片
                    </button>
                </div>
                <div class='layui-inline' id='div_prev' title=''></div>
                <input type="hidden" name="imgUrl">
            </td>
        </tr>
        <tr>
            <td>
                <div class="layui-inline">
                    <label for="" class="layui-form-label">商品描述<span class="mustInput"></span></label>
                </div>
            </td>
            <td colspan="3">
                <div class="layui-inline textarea">
                    <textarea name="mallItemsDesc" id="mallItemsDesc" class="layui-textarea"></textarea>
                </div>
            </td>
        </tr>
    </table>
    <button class="layui-btn add" style="display:none;" lay-submit lay-filter="add"></button>
</form>