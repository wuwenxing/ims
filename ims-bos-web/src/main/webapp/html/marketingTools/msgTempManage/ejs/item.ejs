<% if(typeof(id) != "undefined"){ %>
<form class="layui-form" action="">
  <div class="layui-form-item">
      <div class="layui-inline">
        <label class="layui-form-label flex flex-align-items"><em class="required">*</em><span>编号</span></label>
        <div class="layui-inline">
          <input name="code" value="<%=code%>" lay-verify="required" disabled=disabled  lay-verify="required" lay-verType="tips" autocomplete="off" class="layui-input">
          <input type="hidden" id="id" name="id" value="<%=id%>" />
        </div>
      </div>
      <div class="layui-inline">
        <label class="layui-form-label flex flex-align-items"><em class="required">*</em><span>状态</span></label>
        <div class="layui-inline">
          <select name="enableFlag" id="enableFlag" lay-verify="required" lay-verType="tips">
            <option value="Y" <%if(enableFlag == 'Y'){%> selected <%}%> >启用</option>
            <option value="N" <%if(enableFlag == 'N'){%> selected <%}%>>关闭</option>
          </select>
        </div>
      </div>
  </div>
  <div class="layui-form-item">
      <div class="layui-inline">
        <label class="layui-form-label flex flex-align-items"><em class="required">*</em><span>语言</span></label>
        <div class="layui-inline">
          <select name="lang" id="" lay-verify="required" lay-verType="tips" disabled=disabled>
            <option value="">---请选择---</option>
            <option value="zh_TW" <%if(lang == 'zh_TW'){%> selected <%}%>>繁体</option>
            <option value="zh_CN" <%if(lang == 'zh_CN'){%> selected <%}%>>简体</option>
            <option value="en_US" <%if(lang == 'en_US'){%> selected <%}%>>英文</option>
          </select>
        </div>
      </div>
      <div class="layui-inline">
        <label class="layui-form-label flex flex-align-items"><em class="required">*</em><span>名称</span></label>
        <div class="layui-inline">
            <input value="<%=tplName%>" name="tplName" lay-verify="required" lay-verType="tips" autocomplete="off" class="layui-input">
        </div>
      </div>
  </div>
  <div class="layui-form-item">
    <div class="layui-inline flex no-mr">
      <label for="" class="layui-form-label flex flex-align-items"><em class="required">*</em><span>内容</span></label>
      <div class="layui-inline flex-item">
        <textarea class="layui-textarea" name="tplContent" id="" lay-verify="required" lay-verType="tips" ><%=tplContent%></textarea>
      </div>
    </div>
  </div>
  <div class="layui-form-item">
    <div class="layui-inline flex no-mr">
      <label for="" class="layui-form-label flex flex-align-items"><span>扩展信息1</span></label>
      <div class="layui-inline flex-item">
        <textarea class="layui-textarea" name="ext1" id="" ><%=ext1%></textarea>
      </div>
    </div>
  </div>
  <div class="layui-form-item no-mb">
    <div class="layui-inline flex no-mr">
      <label for="" class="layui-form-label flex flex-align-items"><span>备注</span></label>
      <div class="layui-inline flex-item">
        <textarea class="layui-textarea" name="remark" id="" ><%=remark%></textarea>
      </div>
    </div>
  </div>
  <button class="layui-btn node-submit" style="display:none;" lay-submit lay-filter="item"></button>
</form>
<% }else{ %>
